<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav role="navigation" class="navbar navbar-inverse navbar-fixed-top" style="background-color:darkslateblue; padding:5px 0px 5px 0px ">
        <!-- Логотип и мобильное меню -->
        <div class="container">
            <div class="navbar-header">
                <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle" style="font-family:'Underground(FONT BY LYAJKA)'">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Delivery Service", "Index", "Home", new { area = "" },
                    new { @class = "navbar-brand", @style = "font-size:25px; " +
                    "padding: 20px 15px 0px 15px; transform:scale(1,2); font-stretch: ultra-expanded; font-family: 'Underground(FONT BY LYAJKA)';"
                    })
            </div>
            <br />
            <div id="navbarCollapse" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#" style="font-size:15px; font-weight:700">О команиии <b class="caret"></b></a>
                        <ul role="menu" class="dropdown-menu">
                            <li>@Html.ActionLink("Стоимость и срок доставки", "Index", "DistanceDeliveries")</li>
                            <li>@Html.ActionLink("Калькулятор стоимости", "Index", "ViewCostDayDeliveries")</li>
                            <li>@Html.ActionLink("Частным клиентам", "Index", "DispatchRegisters")</li>
                            <li>@Html.ActionLink("Бизнес-клиентам", "Index", "DispatchRegisters")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Новости", "Index", "News", null, new { @style = "font-size:15px; font-weight:700" })</li>
                    <li>@Html.ActionLink("Отделения", "Index", "Departments", null, new { @style = "font-size:15px; font-weight:700" })</li>
                    <li>@Html.ActionLink("Отследить посылку", "Index", "ViewFindPackages", null, new { @style = "font-size:15px; font-weight:700" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
            <hr style="background-color:white; height:2px" />
        </div>
    </nav>
    <br />
    <br />
    <br />
    <br />
    <div class="container body-content" style="min-height:400px; margin-left:20px">

        @RenderBody()


    </div>

    <br />
    <br />
    <br />
    <br />
    <footer class="panel-footer" style="background-color:darkslateblue; color:white; position:fixed; bottom:0; left:0; width:100%">
        <div class="container">
            <hr style="background-color:white; height:2px" />
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    <script src='@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")'></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
