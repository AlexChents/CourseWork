@model IEnumerable<CourseChentsov.Models.News>

@{
    ViewBag.Title = "Index";
}
<body style="background:url(/Content/Images/transport.jpg); background-size:100%; background-attachment:fixed">
</body>
<div class="jumbotron text-center back-fon" style="padding:0 0 1px 0;">
    <h1 style="font-family:Arial Black">Delivery Service</h1>
    <p>Новый сервис доставки</p>
</div>
<div class="container col-sm-12" style="margin-top:20px;color:black;">
    <div class="row">
        <div class="col-sm-3 back-fon">
            <h2>Доставка</h2>
            <hr style="background-color:darkblue; height:2px;">
            <br />
            <div class="fakeimg"><img src="~/Content/Images/package.jpeg" alt="img_package" width="250" style="opacity: 1" /></div>
            <br />
            <p>Получайте посылку всегда во время</p>
            <hr style="background-color:darkblue; height:2px;">
            <h3>Информация</h3>
            <hr style="background-color:darkblue; height:1px;">
            <ul class="nav nav-pills flex-column">
                <li>@Html.ActionLink("Наши отделения", "Index", "Departments", null, new { @class = "nav-item nav-link" })</li>
                <li>@Html.ActionLink("Стоимость и срок доставки", "Index", "DistanceDeliveries", null, new { @class = "nav-item nav-link" })</li>
                <li>@Html.ActionLink("Калькулятор стоимости", "Index", "ViewCostDayDeliveries", null, new { @class = "nav-item nav-link" })</li>
                <li>@Html.ActionLink("Отследить посылку", "Index", "ViewFindPackages", null, new { @class = "nav-item nav-link" })</li>
            </ul>
            <hr style="background-color:darkblue; height:1px;">
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-8 back-fon">
            <div>
                <h2>О нас</h2>
                <p>
